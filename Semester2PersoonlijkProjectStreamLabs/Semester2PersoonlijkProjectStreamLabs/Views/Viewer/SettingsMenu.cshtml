@model Semester2PersoonlijkProjectStreamLabs.Models.UserViewModel

@{
    ViewData["Title"] = "SettingsMenu";
}

<div class="row">
    <!-- side nav-->
    <aside class="col-sm-6 col-md-3 card  my-4" style="height:100%">
        <h3>Settings</h3>
        <hr />
        <ul>
            <li>
                <a href="/User/SettingsMenu" class="active">
                    <span class="fa fa-gear"></span>
                    User info
                </a>
            </li>
            @if (User.IsInRole("Viewer"))
            {
                <li>
                    <a href="/Viewer/UpdateUserInfo">
                        <span class="fa fa-wrench"></span>
                        Edit account
                    </a>
                </li>
                <li>
                    <a href="/User/DisableUser">
                        <span class="fa fa-wrench"></span>
                        Disable Account
                    </a>
                </li>
                <li>
                    <a href="/User/DeleteUser">
                        <span class="fa fa-wrenh"></span>
                        Delete Account
                    </a>
                </li>
            }
        </ul>
    </aside>

    <h3>Uw informatie:</h3>
    <div class="col-sm-8 col-md-6 card  my-5">
        <div>First name: @Model.FirstName</div>
        <div>Last name: @Model.LastName</div>
        <div>Email: @Model.EmailAddress</div>
        <div>Role: @Model.Type</div>
    </div>

</div>