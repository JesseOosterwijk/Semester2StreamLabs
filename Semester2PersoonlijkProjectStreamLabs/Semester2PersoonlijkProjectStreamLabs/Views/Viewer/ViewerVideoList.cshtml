@model IEnumerable<Semester2PersoonlijkProjectStreamLabs.Models.VideoViewModel>

@{
    ViewData["Title"] = "ViewerVideoList";
}

<h2>Overzicht Videos gebruiker</h2>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @foreach(var item in Model)
        {
        <div class="col-sm-4 col-md-4 col-xs-12">
            <form asp-action="CommentOnVideo">
                <div class="modal-title" style="width:250px;">@item.Name</div>
                <hr />
                <div class="video-frame">
                    <video style="width:250px; height:150px;" controls>
                        <source src="@Url.Content(item.ContentUrl)" type="video/mp4" />
                    </video>
                </div>
                <div class="col-md-12">
                    <div class="control-group">
                        <label class="control-label" for="button1id"></label>
                        <div class="form-group">
                            @Html.ActionLink("Comment", "CommentOnVideo", item)
                        </div>
                    </div>
                </div>
            </form>
        </div>
        }
    </div>
</body>
</html>