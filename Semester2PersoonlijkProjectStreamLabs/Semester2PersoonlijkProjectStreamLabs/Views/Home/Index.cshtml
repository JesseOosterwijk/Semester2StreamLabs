@{
    ViewData["Title"] = "Home Page";
}

@section Image
    {
    <div class="hero-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url('../images/front.jpg'); width: 100%; height: 50%; background-position: center; background-repeat: no-repeat; background-size: cover; position: relative">
        <div class="hero-text" style="font-size:40px; color:black; padding: 15%;">
            <h1 class="hero-image-h1" style="font-family:Open Sans Condensed; font-size:60px; width: inherit; background-color:none; color:white;">Welkom</h1>
            <hr style="display:block; height: 2px; border: 0; border-top: 2px solid #fff; margin: 2px 0; padding: 0;" />
            <p style="font-size:20px; font-style:italic; color: white">StreamLabs</p>
            <br />
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Calculate" asp-controller="Calc" class="button">Calculate</a>
                    <a asp-action="ViewMessage" id="SeeChat" asp-controller="Message" class="button">Chat</a>
                }
                @if (User.IsInRole("Doctor"))
                {
                    <a asp-action="GetAllLinkedPatients" asp-controller="Doctor" id="SeePatientOverview" class="button" style="margin-left: 100px">Patient Overview</a>
                }
            }

        </div>
    </div>
}
