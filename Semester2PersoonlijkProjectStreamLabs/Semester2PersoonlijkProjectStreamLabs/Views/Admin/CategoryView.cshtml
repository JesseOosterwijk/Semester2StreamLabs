@model Semester2PersoonlijkProjectStreamLabs.Models.CategoryViewModel

@{
    ViewData["Title"] = "CategoryView";
}

<h4>Making new category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label">Name</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CategoryId" class="form-control" />
            <div class="form-group">
                <input id="EditCategory" type="submit" value="Edit category" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CategoryOverview">Back to category overview</a>
</div>

