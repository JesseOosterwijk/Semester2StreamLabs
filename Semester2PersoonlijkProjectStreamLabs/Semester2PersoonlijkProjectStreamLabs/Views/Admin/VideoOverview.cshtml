@using Models;
@model Semester2PersoonlijkProjectStreamLabs.Models.VideoViewModel

@{
    ViewData["Title"] = "VideoOverview";
}

<h2>Video Overview</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Video name
            </th>
            <th>
                Date of upload
            </th>
            <th>
                User
            </th>
            <th>
                Delete Video
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Video item in Model.Videos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfUpload)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.ActionLink("Delete Video", "DeleteVideo", new { id = item.VideoId }, new { onclick = "Are you sure you want to delete this video?" } )
                </td>
            </tr>
        }
    </tbody>
</table>
