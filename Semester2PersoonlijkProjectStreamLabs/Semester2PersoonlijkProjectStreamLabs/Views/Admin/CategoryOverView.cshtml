@using Models;
@model Semester2PersoonlijkProjectStreamLabs.Models.CategoryViewModel

@{
    ViewData["Title"] = "CategoryOverview";
}

<h2>Overview category</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Category Description
            </th>
            <th>
                Edit category
            </th>
            <th>
                Delete category
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category item in Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit Category", "EditCategory", new { id = item.CategoryId })
                </td>
                <td>
                    @Html.ActionLink("Delete Category", "DeleteCategory", new { id = item.CategoryId }, new { onclick = "Are you sure you want to delete this category?" } )
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-area="" asp-controller="Admin" asp-action="AddNewCategory" class="btn btn-primary btn-lg btn-block" style="margin-top: 10px" id="NewCategoryBtn">Add New Category</a>
</div>