@using Models;
@model Semester2PersoonlijkProjectStreamLabs.Models.VideoViewModel

<h2>Uploading video</h2>
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="UploadVideo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category:</label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (Category category in ViewData["Categories"] as IList<Category>)
                    {
                        <option value="
                                    @category.CategoryId">
                            @category.Name
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Video">Choose File:</label>
                <input type="file" name="file" id="mp4" />
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

